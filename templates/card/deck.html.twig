{% extends 'base.html.twig' %}

{% block title %}Visa Kortlek{% endblock %}

{% block body %}
<h1>Visa Kortlek</h1>

<p>Här visas alla kort i kortleken, sorterade efter färg och värde.</p>

<style>
    .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        justify-content: center;
    }

    .card {
        width: 60px;
        height: 90px;
        display: flex;
        justify-content: center;
        align-items: center;
        border: 2px solid #ccc;
        border-radius: 5px;
        background-color: white;
        font-size: 24px;
        text-align: center;
    }

    .card.red {
        color: red;
    }

    .card.black {
        color: black;
    }

    .card .value {
        font-weight: bold;
    }

    .card .suit {
        font-size: 28px;
    }
</style>

<div class="card-container">
    {% for card in cards %}
        {% set symbol = {
            'Hearts': '♥',
            'Diamonds': '♦',
            'Clubs': '♣',
            'Spades': '♠'
        }[card.getSuit()] %}

        {% set colorClass = card.getSuit() in ['Hearts', 'Diamonds'] ? 'red' : 'black' %}

        <div class="card {{ colorClass }}">
            <div class="value">{{ card.getValue() }}</div>
            <div class="suit">{{ symbol }}</div>
        </div>
    {% endfor %}
</div>
{% endblock %}
